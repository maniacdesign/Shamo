<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_background"
    android:paddingStart="30dp"
    android:paddingTop="20dp"
    tools:context=".ui.account.AccountFragment">

    <TextView
        android:id="@+id/textAccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/poppins_semi_bold"
        android:text="Account"
        android:textColor="@color/primary_text"
        android:textSize="16sp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textEditProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_regular"
        android:text="Edit Profile"
        android:textColor="#999999"
        android:textSize="13sp"
        app:layout_constraintTop_toBottomOf="@id/textAccount"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textYourOrders"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_regular"
        android:text="Your Orders"
        android:textColor="#999999"
        android:textSize="13sp"
        app:layout_constraintTop_toBottomOf="@id/textEditProfile"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textHelp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_regular"
        android:text="Help"
        android:textColor="#999999"
        android:textSize="13sp"
        app:layout_constraintTop_toBottomOf="@id/textYourOrders"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textGeneral"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/poppins_semi_bold"
        android:text="General"
        android:textColor="@color/primary_text"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/textHelp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textPrivacyPolicy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_regular"
        android:text="Privacy &amp; Policy"
        android:textColor="#999999"
        android:textSize="13sp"
        app:layout_constraintTop_toBottomOf="@id/textGeneral"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textTermOfService"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_regular"
        android:text="Term of Service"
        android:textColor="#999999"
        android:textSize="13sp"
        app:layout_constraintTop_toBottomOf="@id/textPrivacyPolicy"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textRateApp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_regular"
        android:text="Rate App"
        android:textColor="#999999"
        android:textSize="13sp"
        app:layout_constraintTop_toBottomOf="@id/textTermOfService"
        tools:ignore="MissingConstraints" />


</androidx.constraintlayout.widget.ConstraintLayout>