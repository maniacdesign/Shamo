<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_background"
    tools:context=".ui.favorite.FavoriteFragment">

    <ImageView
        android:id="@+id/imageFavorite"
        android:layout_width="79dp"
        android:layout_height="69dp"
        android:src="@drawable/ic_favorite"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textMessage3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="You don't have dream shoes?"
        android:textSize="16sp"
        android:fontFamily="@font/poppins_medium"
        android:textColor="@color/primary_text"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/imageFavorite"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/textMessage4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Let's find your favorite shoes"
        android:textSize="16sp"
        android:fontFamily="@font/poppins_medium"
        android:textColor="#999999"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/textMessage3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:layout_width="152dp"
        android:layout_height="44dp"
        android:background="@drawable/button_background_shape"
        android:text="Explore Store"
        android:textSize="15sp"
        android:fontFamily="@font/poppins_medium"
        android:textAllCaps="false"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/textMessage4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>